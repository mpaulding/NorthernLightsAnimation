<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.mpaulding.northernlightsanimation.AnimationActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lightsImageView"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="@drawable/lights1"
        android:contentDescription="@string/lights_image_view_text" />

    <Button
        android:text="@string/frame_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameAnimButton"
        android:onClick="toggleFrameAnim" />

    <Button
        android:text="@string/rotate_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rotateAnimButton"
        android:onClick="toggleRotateAnim"/>

    <Button
        android:text="@string/shake_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shakeAnimButton" />

    <Button
        android:text="@string/flip_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flipAnimButton" />
</LinearLayout>
